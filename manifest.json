{
  "manifest_version": 3,
  "name": "X Content Filter",
  "version": "1.0",
  "description": "Analyzes and filters content on X.com based on configured topics",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X Content Filter Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}
